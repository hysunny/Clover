<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/useravatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/photo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="向阳处的她"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/userSex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="女"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/userAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="19"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="岁"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_set_userinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tv_selector"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginTop="15dp">

        <TextView
            style="@style/Smile.TextView._Black"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@string/update_user_info"
            android:paddingLeft="15dp" />

        <ImageView
            style="@style/Smile.ImageView"
            android:layout_width="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:src="@drawable/register_bottom_arrow" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_lover_set"
        android:layout_width="match_parent"
        android:background="@drawable/tv_selector"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginTop="1dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_loverinfo_title"
            style="@style/Smile.TextView._Black"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:textSize="18sp"
            android:text="@string/lover_info" />

        <ImageView
            android:id="@+id/iv_right_vg"
            style="@style/Smile.ImageView"
            android:layout_width="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/action_settings"
            android:paddingRight="10dp"
            android:src="@drawable/register_bottom_arrow" />

        <TextView
            android:id="@+id/tv_loverinfo_vg"
            style="@style/Smile.TextView._Black"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="26dp"
            android:textSize="18sp"
            android:text="12345678" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_setting"
        android:layout_width="match_parent"
        android:background="@drawable/tv_selector"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginTop="1dp"
        android:layout_height="wrap_content">

        <TextView
            style="@style/Smile.TextView._Black"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:textSize="18sp"
            android:text="@string/setting" />

        <ImageView
            style="@style/Smile.ImageView"
            android:layout_width="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:src="@drawable/register_bottom_arrow" />
    </RelativeLayout>

<!--    <Button
        android:id="@+id/bt_logout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:text="退出"/>-->

    <TextView
        android:id="@+id/tv_about"
        style="@style/Smile.TextView._Black"
        android:layout_width="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/tv_selector"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        android:paddingLeft="15dp"
        android:text="@string/about_us" />

    <TextView
        android:id="@+id/tv_logout"
        style="@style/Smile.TextView._Black"
        android:layout_width="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/tv_selector"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginTop="1dp"
        android:textSize="18sp"
        android:paddingLeft="15dp"
        android:text="@string/logout" />
</LinearLayout>